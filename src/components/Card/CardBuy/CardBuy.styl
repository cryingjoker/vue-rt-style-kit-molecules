.rt-card-buy
  min-height inherit
  background-color b2c-white
  position relative

.rt-card-buy__info
  position relative

.rt-card-buy__form
  width 100%
  background-color b2c-white
  visibility hidden
  position absolute
  top -50%
  left 0
  right 0
  z-index -1
  transition-timing-function ease-in-out
  transition-duration .2s
  transition-property top, opacity, visibility, max-height
  .rt-close
    right: 20px
    top: 20px
    position: absolute
    cursor: pointer
    transition-timing-function ease-in-out
    transition-duration .4s
    transition-property transform
    z-index: 2
    &:hover
      transform rotate(180deg)
  .rt-card-buy__form-horizontal &
    max-height 0
    overflow hidden
    background-color transparent
    top 0
    transition-property opacity, visibility, max-height
    animation none

  .rt-card-buy__form-horizontal.rt-card-buy--show-form &
    max-height 2000px
    position relative

  .rt-card-buy--show-form &
    opacity 1
    visibility visible
    position relative
    top 0
    z-index 2
    animation .4s showCardForm linear

  .rt-card-buy--show-form.rt-card-buy--is-horizontal &
    max-height 3000px
    animation none

.rt-card-buy__content
  min-height 300px
  position relative
  top 0
  left 0
  right 0
  transition-timing-function ease-in-out
  transition-duration .2s
  transition-property top, opacity, max-height

  .rt-card-buy--show-form &
    display none
    max-height 0
    overflow hidden
    opacity 0
    position absolute
    top -100%
    animation .4s hideCardContent linear

  .rt-card-buy--is-horizontal &
    max-height 2000px
    overflow hidden
    top 0
    animation none

  .rt-card-buy--show-form.rt-card-buy--is-horizontal &
    max-height 0
    opacity 0
    top 0
    animation none

@keyframes showCardForm
  0%
    opacity 0
    position absolute
    top -50%
  50%
    opacity .5
    position relative
    top -25%
  99%
    opacity 1
    position relative
    top 0
  100%
    opacity 1
    top 0

@keyframes hideCardContent
  0%
    opacity 1
    position relative
    top 0
  50%
    opacity .5
    position relative
    top 0
  99%
    opacity 0
    position relative
    top -50%
  100%
    opacity 0
    position absolute
    top -50%
