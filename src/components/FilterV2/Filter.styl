.rt-tag-n-wrapper
  display flex
  flex-wrap nowrap
  overflow: auto;

.rt-tag-n
  padding-top: 8px
  padding-bottom: 8px
  padding-left: 32px
  padding-right: 32px
  border 1px solid disable-button-color
  transition-timing-function ease-in-out
  transition-duration .4s
  transition-property border, color
  display: inline-block
  border-radius 40px
  cursor: pointer;
  white-space nowrap
  &+.rt-tag-n
    margin-left: 12px
  @media(hover: hover)
    &:hover
      color b2c-orange
.rt-tag-n-active
  border 1px solid b2c-orange

.rt-tag-n--purple
  @media(hover: hover)
    &:hover
      color b2c-purple
  &.rt-tag-n-active
    border 1px solid b2c-purple
