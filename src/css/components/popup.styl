
.rt-popup-wrapper
  display none
  flex 1
  justify-content center
  align-items center
  width 100%
  max-width 100%
  height 100%
  opacity 0
  visibility hidden
  position fixed
  top 0
  bottom 0
  left 0
  right 0
  z-index 100
  background-color: main-color04
  transition-timing-function ease-in-out
  transition-duration .4s
  transition-property opacity, visibility
  pointer-events none


.rt-popup-content
  max-height 80vh
  overflow auto

.rt-popup
  max-width 1024px
  width: 100%
  border-radius 8px

.rt-popup-close
  position: absolute;
  top: 16px
  right: 16px
  cursor: pointer;



.rt-popup-content-td
  max-height 80vh
  overflow auto

.rt-popup-wrapper-td
  @media (max-width: tablet-upper-limit)
    display none
    flex 1
    justify-content center
    align-items center
    width 100%
    max-width 100%
    height 100%
    opacity 0
    visibility hidden
    position fixed
    top 0
    bottom 0
    left 0
    right 0
    z-index 100
    transition-timing-function ease-in-out
    transition-duration .4s
    transition-property opacity, visibility

.rt-popup-wrapper--is-active,
.rt-popup-wrapper-td--is-active
  pointer-events auto
  display flex
  opacity 1
  visibility visible
  animation .3s showPopupWrapper ease-in-out



.rt-popup-wrapper--is-closing,
.rt-popup-wrapper-td--is-closing
  animation .3s hidePopupWrapper ease-in-out

.rt-popup
  position: relative;
  background-color white
  padding-top vertical-space * 2
  padding-bottom vertical-space * 2
  padding-left horizontal-space
  padding-right horizontal-space

.rt-popup-td
  @media (max-width: tablet-upper-limit)
    background-color white
    padding-top vertical-space * 2
    padding-bottom vertical-space * 2
    padding-left horizontal-space
    padding-right horizontal-space

.rt-popup--filter
  width 300px



@keyframes showPopupWrapper
  0%
    display flex
    opacity 0
    visibility visible

  100%
    display flex
    opacity 1
    visibility visible

@keyframes hidePopupWrapper
  0%
    display flex
    opacity 1
    visibility visible

  100%
    display flex
    opacity 0
    visibility visible
