.{b2bAppName}-opportunity
  &-item
    width 100%
    @media (max-width: tablet-upper-limit)
      &+&
        padding-top: 0
        border-top 1px solid main-color01
    .row
      display flex
      flex-direction row
      @media (max-width: tablet-upper-limit)
        .rt-col-td-6
          flex 0 0 49.999998%
      @media (max-width: mobile-upper-limit)
        flex-direction column
        .rt-col-md-3
          flex: 0 0 auto
    &__image
      background-size: contain
      background-repeat: no-repeat
      background-position: 50% 50%
      width 500px
      height 480px
      margin-right vertical-space * 4
      max-width 100%
      @media (max-width: tablet-upper-limit)
        width 100%
        height calc((100vw - 60px) / 2 * .96)
        margin-right: 0
      @media (max-width: mobile-upper-limit)
        width 100%
        height calc((100vw - 60px)* .96)
        margin-right 0
        margin-bottom vertical-space
    &--reverse
      .row
        flex-direction row-reverse
        @media (max-width: mobile-upper-limit)
          flex-direction column
      .{b2bAppName}-opportunity-item__image
        margin-right 0
        margin-left vertical-space * 4
        @media (max-width: tablet-upper-limit)
          margin-left 0
    &__description
      .{b2bAppName}-price__value
        padding 0
      .d-inline-block+.d-inline-block
        @media (max-width: mobile-upper-limit)
          margin-top 10px

    .mobile-title
      @media (min-width: laptop-lower-limit)
        display none

    .desktop-title
      @media (max-width: tablet-upper-limit)
        display none

    .opportunity--mobile-dropdown &
      @media (max-width: tablet-upper-limit)
        overflow hidden
        .mobile-title
          padding 15px 20px 15px 0
          position relative
        .row
          height 0
          transition height .3s linear
        &--active
          height auto
          margin-bottom vertical-space
          .rtb-opportunity-item__arrow
            transform rotate(180deg)
          .row
            height auto
    &__arrow
      position absolute
      right 0
      top vertical-space
      opacity .5
      transition transform .3s linear
  &-block
    .rt-tabs-navigation-wrapper
      padding-bottom vertical-space * 1.5
      @media (max-width: tablet-upper-limit)
        left -30px
        right -30px
        width 100vw
    .rt-tabs-navigation
      margin 0 -15px
