@media (max-width: mobile-upper-limit)
  .rt-tariff
    &__title
      font-size 18px
      line-height 24px
    .rt-price-v2 .m-font-t-xs
      font-size: 14px;
      line-height: 20px;
    .rt-price-v2__value
      font-size 36px
      line-height 44px

@media (min-width: tablet-lower-limit) and (max-width: tablet-upper-limit)
  .rt-tariff
    &__title
      font-size 20px
      line-height 24px

@media (min-width: laptop-lower-limit)
  .rt-tariff
    &__title
      font-size 22px
      line-height 28px

@media (hover: hover)
  .rt-tariff
    &__link:hover
      color b2c-orange-button-hover
  .rt-tariff.is--theme-dark
    .rt-microtabs.is--tabs .rt-microtabs-nav>a:not(.is--active):hover
      .rt-microtabs-nav__item-opacity
        background #868A96
      &.is--theme-purple
        .rt-microtabs-nav__item-opacity
          background #5C05CB
      &.is--theme-orange
        .rt-microtabs-nav__item-opacity
          background #DB4616
    .rt-tariff__link:hover
      color #FF4F12
    .rt-link--orange:hover
      color #D33706
  .rt-tariff.is--theme-yadisk
    .rt-microtabs.is--tabs .rt-microtabs-nav>a:not(.is--active):hover
      .rt-microtabs-nav__item-opacity
        background #AECBEC
      &.is--theme-purple
        .rt-microtabs-nav__item-opacity
          background #7025F6
      &.is--theme-orange
        .rt-microtabs-nav__item-opacity
          background #E75A30
    .rt-tariff__link:hover
      color #F48E30
    .rt-link--orange:hover
      color #F48E30
