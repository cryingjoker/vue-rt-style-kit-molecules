cmp = '.rt-tariff'
tariffCardRadius = 8px

{cmp}
  background white
  border 2px solid b2c-gray
  border-radius tariffCardRadius
  color main-color
  font-size 14px
  line-height 20px
  padding 20px
  position relative
  z-index 1

  &__title
    font-size 22px
    font-weight 500
    line-height 28px

  &__badge
    color #fff
    font-size 12px
    line-height 16px
    padding-top 4px
    position absolute
    width 36px
    height 24px
    right 8px
    top 0
    text-align center
    &:after
      content ''
      position absolute
      width 0
      height 100%
      border-left 18px solid b2c-orange
      border-right 18px solid b2c-orange
      border-bottom 7px solid transparent
      top 0
      left 0
      right 0
      margin auto
      z-index -1

  &__line
    border-top 1px solid rgba(16, 24, 40, .05)
    margin-left -20px
    margin-right -20px

  &__link
    cursor pointer

  &-option
    display flex
    padding-top 8px
    padding-bottom 8px
    &__icon
      width 24px + 12
    // &__info
    // &__title
    &__desc
      font-size 12px
      line-height 16px
      opacity .5
    &.is--disabled
      {cmp}-option
        &__icon,
        &__title
          opacity .5
        

  &.is--promotion
    {cmp}__badge:after
      border-left-color b2c-purple
      border-right-color b2c-purple
