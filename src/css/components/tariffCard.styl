tariffCardRadius = 8px
inverse()
  color #fff
  .rt-tariff__line
    border-color b2c-white01
  .rt-tariff-price--inline
    color b2c-white05
  .rt-price-n__info,
  .rt-price-v2__old-value
    color b2c-white07
  .rt-price-v2__info-item+.rt-price-v2__info-item:before,
  .rt-price-v2__old-value:before
    background-color b2c-white07
  .rt-sys-icon
    fill #fff

.rt-tariff
  background #fff
  box-shadow inset 0 0 0 2px b2c-gray
  border-radius tariffCardRadius
  color main-color
  font-size 14px
  line-height 20px
  padding 20px
  position relative
  user-select text
  z-index 1

  &__title
    font-weight 500
    padding-bottom 8px

  &__badge
    color #fff
    font-size 12px
    line-height 16px
    padding-top 2px
    position absolute
    width 28px
    height 24px
    right 8px
    top 0
    text-align center
    z-index 2
    &:after
      content ''
      position absolute
      background-image url('data:image/svg+xml;base64,')
      background-repeat no-repeat
      width 100%
      height 100%
      top 0
      left 0
      right 0
      margin auto
      z-index -1

  &__line
    border-top 1px solid rgba(16, 24, 40, .05)
    margin-left -20px
    margin-right -20px
    &-bottom
      border-bottom 1px solid rgba(16, 24, 40, .05)

  &__link
    cursor pointer
    transition color .2s ease-in-out

  &-option
    display flex
    padding-top 8px
    padding-bottom 8px
    &__icon
      flex-shrink  0
      width 24px + 12
    // &__info
    // &__title
    &__desc
      font-size 12px
      line-height 16px
      opacity .5
    &.is--disabled
      .rt-tariff-option
        &__icon,
        &__title
          opacity .5

  &-price
    padding-bottom 12px
    &--inline
      color main-color05

  .rt-tariff__bg
    overflow hidden
    position absolute
    width 100%
    height 100%
    top 0
    left 0
    z-index -1
    &:after
      content ''
      background-repeat no-repeat
      position absolute

  &.is--badge-orange
    .rt-tariff__badge:after
      background-image url('data:image/svg+xml;base64,')

  &.is--no-spaces
    padding 0

  &.is--no-borders
    border-radius 0

  // Темизация
  &.is--theme-dark,
  &.is--theme-yadisk
    inverse()

  &.is--theme-dark
    background #0D162D
    box-shadow none
    .rt-tariff__bg:after
      background-image url('data:image/svg+xml;base64,')
      background-repeat no-repeat
      opacity .3
      width 707px
      height 577px
      left 20px
      bottom -174px
    .rt-microtabs-nav__item
      &-opacity
        background #565C6C
      &.is--theme-purple
        color #fff
        .rt-microtabs-nav__item-opacity
          background #5707C0
      &.is--theme-orange
        color #fff
        .rt-microtabs-nav__item-opacity
          background #CF4417
    .rt-link--orange
      color #FF5E2D
  &.is--theme-yadisk
    background #5D96D9
    box-shadow none
    .rt-tariff__bg:after
      background-image url('data:image/svg+xml;base64,')
      max-width 93%
      width 314px
      height 227px
      left 60px
      bottom 20px
    .rt-link--orange
      color #FF9737
    .rt-microtabs-nav__item
      &-opacity
        background #8EB5E4
      &.is--theme-purple
        color #fff
        .rt-microtabs-nav__item-opacity
          background #6F2DF4
      &.is--theme-orange
        color #fff
        .rt-microtabs-nav__item-opacity
          background #DF5D3A
    .rt-link--orange
      color #FF9737

