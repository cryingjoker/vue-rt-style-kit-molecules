.browser-IE .rt-card,
.rt-card__content
  min-height inherit

.rt-card
  display flex
  z-index: 1
  flex 1
  flex-direction column
  align-self stretch
  width 100%
  min-height min-content
  overflow hidden
  transform: translate3d(0, 0, 0)
  backface-visibility: hidden
  color main-color
  background-position-x center
  background-position-y center
  background-repeat no-repeat
  border-radius 10px
  position relative
  box-shadow card-shadow--before-hovered
  transition-timing-function ease-in-out
  transition-duration .2s
  transition-property box-shadow
  &:hover
    @media (hover: hover) {
      box-shadow card-shadow--hovered
    }

  &--custom-height
    min-height initial

  &--has-discount
    margin-top: 50px
    max-height calc(100% - 50px)

  &__border-content
    border-top 1px solid main-color01
    padding-top vertical-space * .5
    padding-left horizontal-space
    padding-right horizontal-space

  &--has-bg-cover
    background-color transparent

  &--transparent
    background-color transparent

  @media (max-width: mobile-upper-limit)
    flex-direction column

  @media (min-width: tablet-lower-limit)
    min-height 364px

  &--has-white-color
    color #fff

  &--has-smoke
    &:before
      content ""
      background-color rgba(0, 0, 0, .5)
      border-radius 10px
      position absolute
      top 0
      bottom 0
      left 0
      right 0
      z-index 2

  &--has-smoke03
    &:before
      content ""
      background-color rgba(0, 0, 0, .3)
      border-radius 10px
      position absolute
      top 0
      bottom 0
      left 0
      right 0
      z-index 2

  &--has-smoke02
    &:before
      content ""
      background-color rgba(0, 0, 0, .2)
      border-radius 10px
      position absolute
      top 0
      bottom 0
      left 0
      right 0
      z-index 2

  &__background
    background-color white
    background-position-x center
    background-position-y center
    background-repeat no-repeat
    border-radius 10px
    position absolute
    top -20px
    bottom -20px
    left -20px
    right -20px
    z-index 1

    .rt-card-purple &
      background-color b2c-purple

    .rt-card-purple-low &
      background-color b2c-purple-low

    .rt-card-purple-high &
      background-color b2c-purple-high

    .rt-card-red &
      background-color b2c-red

    .rt-card-red-low &
      background-color b2c-red-low

    .rt-card-red-high &
      background-color b2c-red-high

    .rt-card-dark-blue &
      background-color b2c-dark-blue

    .rt-card-dark-blue-low &
      background-color b2c-dark-blue-low

    .rt-card-dark-blue-high &
      background-color b2c-dark-blue-high

    .rt-card-light-blue &
      background-color b2c-light-blue

    .rt-card-light-blue-low &
      background-color b2c-light-blue-low

    .rt-card-light-blue-high &
      background-color b2c-light-blue-high

    .rt-card-yellow &
      background-color b2c-yellow

    .rt-card-yellow-low &
      background-color b2c-yellow-low

    .rt-card-yellow-high &
      background-color b2c-yellow-high

    .rt-card-orange &
      background-color b2c-orange

    .rt-card-orange-low &
      background-color b2c-orange-low

    .rt-card-orange-high &
      background-color b2c-orange-high

    .rt-card-pink &
      background-color b2c-pink

    .rt-card-pink-low &
      background-color b2c-pink-low

    .rt-card-pink-high &
      background-color b2c-pink-high

    .rt-card-green &
      background-color b2c-green

    .rt-card-green-low &
      background-color b2c-green-low

    .rt-card-green-high &
      background-color b2c-green-high

    .rt-card-black &
      background-color dark-card-background

    .rt-card-slate &
      background-color b2c-slate

    .rt-card-dark-slate &
      background-color b2c-dark-slate

    .rt-card-light-grey &
      background-color light-grey

    &--position-background-top
      background-position-x center
      background-position-y top

    &--position-background-right
      background-position-x calc(100% - 40px)
      background-position-y center

    &--position-background-bottom
      background-position-x center
      background-position-y bottom

    &--position-background-left
      background-position-x 40px
      background-position-y center

    &--position-background-top-right
      background-position-x calc(100% - 40px)
      background-position-y top

    &--position-background-bottom-right
      background-position-x calc(100% - 40px)
      background-position-y bottom

    &--position-background-bottom-left
      background-position-x 40px
      background-position-y bottom

    &--position-background-top-left
      background-position-x 40px
      background-position-y top

    .rt-card--has-bg-repeat &
      background-repeat repeat

    .rt-card--has-bg-cover &
      background-size cover

    @media (max-width: mobile-upper-limit)
      .rt-card--hide-background-on-mobile &
        background-image inherit !important

  &__stand-alone-background
    background-size cover
    background-repeat no-repeat
    position absolute
    top 0
    bottom 0
    right 0
    z-index 2

    @media (max-width: mobile-upper-limit)
      width 100% !important
      height 100% !important
      max-height 40vw !important
      background-position center center
      background-size contain
      margin-top vertical-space
      position relative
      top 0 !important
      bottom 0 !important
      left 0 !important
      right 0 !important

  &__content
    display flex
    flex-direction column
    width 100%
    min-width 100%
    min-height auto
    padding vertical-space 0
    position relative
    z-index 3

    @media (min-width: tablet-lower-limit)
      min-height 364px

    &--has-custom-height
      @media (max-width: mobile-upper-limit)
        display flex
        min-height auto

    .rt-col-6 &
      min-width 50%

    &--has-offset-top
      padding-top vertical-space * 9

  &__body
    flex 1 0 auto
    padding-left horizontal-space
    padding-right horizontal-space

    &--is-empty
      @media (max-width: mobile-upper-limit)
        display none

    &--is-static
      flex 0
      flex-grow 0 !important

  &__footer
    padding-left horizontal-space
    padding-right horizontal-space

  &__header
    flex 0 0 auto
    padding-left horizontal-space
    padding-right horizontal-space

    &__image
      max-width 100%

    &>*
      hyphens auto

  &__bottom-list
    border-top 1px solid main-color01
    margin-top vertical-space * 1.5
    padding-top vertical-space
    padding-left horizontal-space
    padding-right horizontal-space

  &-img
    max-width 100%

  &-text
    letter-spacing .18px

  &-list
    &__item
      display flex
      flex-direction row

      & + &
        padding-top vertical-space

    &__icon
      width 56px

    &__name
      display flex
      flex 1 0 auto
      flex-direction row
      align-items center
      width calc(100% - 56px)
      padding-left horizontal-space * .5

  &__popup-benefits,
  &__popup-costs
    display none
  &--no-shadow
    box-shadow none
    border 2px solid #F3F3F4
    &:hover
      box-shadow none

.rt-card-image
  flex-direction column
  background-color transparent

  &__content
    flex 1
    background-color white
    padding-top vertical-space

  .rt-card__body
    padding-bottom vertical-space

  &__figure
    flex 0
    display: block
    width 100%
    height 364px
    min-height 364px
    background-position center
    background-size cover

  &-list
    border-top 1px solid card-list-border
    border-bottom 1px solid card-list-border
    padding-top vertical-space * .5
    padding-bottom vertical-space * .5
    padding-left horizontal-space
    padding-right horizontal-space

    &--without-top-border
      border-top-width 0

    & + &
      margin-top -1px

    &--has-icon
      display flex
      flex-direction row
      align-items center

      &__icon
        width 55px + horizontal-space * .5
        box-sizing border-box
        padding-right horizontal-space * .5

.rt-card-image-v2
  box-shadow none
  color: inherit

  .rt-card__body
    padding-left: 0
    padding-right: 0
  @media (hover: hover)
    &:hover
      box-shadow none
      .rt-card-image__arrow
         opacity: 1
         pointer-events auto
      .rt-card-image__label
        color b2c-orange
      .rt-card-image__figure
        transform scale(1.2)

  .rt-card-image__figure-wrapper
    border-radius 8px
    display: block

    overflow: hidden
    height: 354px
    .rt-card-image__figure
      height: 354px
      min-height 354px
      max-height 354px

    @media (min-width laptop-upper-limit)
      height: 400px
      .rt-card-image__figure
        height: 400px
        min-height 400px
        max-height 400px
    @media (max-width: tablet-upper-limit)
      height: 312px
      .rt-card-image__figure
        height: 312px
        min-height 312px
        max-height 312px
    @media (max-width: mobile-upper-limit)
      height: 264px
      .rt-card-image__figure
        height: 264px
        min-height 264px
        max-height 264px

  &.rt-card-image-type--small
    .rt-card-image__figure-wrapper

      height: 232px
      .rt-card-image__figure
        height: 232px
        min-height 232px
        max-height 232px
      @media (min-width laptop-upper-limit)
        height: 264px
        .rt-card-image__figure
          height: 264px
          min-height 264px
          max-height 264px

      @media (max-width: mobile-upper-limit)
        height: 200px
        .rt-card-image__figure
          min-height 200px
          max-height 200px

  .rt-card-image__figure
    height: 100%
    width: 100%
    left: 0
    right: 0
    position: relative
    transform scale(1)
    transition-duration 0.25s
    transition-property width, height, transform
    transition-timing-function ease-in-out


  .rt-card-image__content
    padding-top: 24px
    background transparent
    display flex
    flex-direction: column
  .rt-card-image__label
    transition-duration 0.25s
    transition-property color
    transition-timing-function cubic-bezier(0.4, 0, 0.2, 1)
  .rt-card-image__body
    flex: 1
    transition-duration 0.25s
    transition-property color
    transition-timing-function cubic-bezier(0.4, 0, 0.2, 1)
    color main-color05
    .rt-dark-theme &
      color b2c-white05
  .rt-card-image__arrow
    display: flex
    vertical-align middle
    opacity: 0
    pointer-events none
    transition-duration 0.25s
    transition-property opacity
    transition-timing-function cubic-bezier(0.4, 0, 0.2, 1)
    .rt-sys-icon
      fill main-color05
    color main-color05
    .rt-dark-theme &
      color b2c-white05
      .rt-sys-icon
        fill b2c-white05



.rt-card-buy
  min-height inherit
  background-color b2c-white
  position relative

.rt-card-buy__info
  position relative

.rt-card-buy__form
  width 100%
  background-color b2c-white
  visibility hidden
  position absolute
  top -50%
  left 0
  right 0
  z-index -1
  transition-timing-function ease-in-out
  transition-duration .2s
  transition-property top, opacity, visibility, max-height
  .rt-close
    right: 20px
    top: 20px
    position: absolute
    cursor: pointer
    transition-timing-function ease-in-out
    transition-duration .4s
    transition-property transform
    z-index: 2
    &:hover
      transform rotate(180deg)
  .rt-card-buy__form-horizontal &
    max-height 0
    max-height 0
    overflow hidden
    background-color transparent
    top 0
    transition-property opacity, visibility, max-height
    animation none

  .rt-card-buy__form-horizontal.rt-card-buy--show-form &
    max-height 2000px
    position relative

  .rt-card-buy--show-form &
    opacity 1
    visibility visible
    position relative
    top 0
    z-index 2
    animation .4s showCardForm linear

  .rt-card-buy--show-form.rt-card-buy--is-horizontal &
    max-height 3000px
    animation none

.rt-card-buy__content
  min-height 300px
  position relative
  top 0
  left 0
  right 0
  transition-timing-function ease-in-out
  transition-duration .2s
  transition-property top, opacity, max-height

  .rt-card-buy--show-form &
    display none
    max-height 0
    overflow hidden
    opacity 0
    position absolute
    top -100%
    animation .4s hideCardContent linear

  .rt-card-buy--is-horizontal &
    max-height 2000px
    overflow hidden
    top 0
    animation none

  .rt-card-buy--show-form.rt-card-buy--is-horizontal &
    max-height 0
    opacity 0
    top 0
    animation none

@keyframes showCardForm
  0%
    opacity 0
    position absolute
    top -50%

  50%
    opacity .5
    position relative
    top -25%

  99%
    opacity 1
    position relative
    top 0

  100%
    opacity 1
    top 0

@keyframes hideCardContent
  0%
    opacity 1
    position relative
    top 0

  50%
    opacity .5
    position relative
    top 0

  99%
    opacity 0
    position relative
    top -50%

  100%
    opacity 0
    position absolute
    top -50%

