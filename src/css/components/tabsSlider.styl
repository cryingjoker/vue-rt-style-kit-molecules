.tab-slider
  transition-timing-function ease-in-out
  transition-duration .3s
  transition-property min-height
.tab-slider__header
  display: flex
  flex-wrap wrap
  overflow: auto;
  max-width 100%
  @media (max-width: tablet-upper-limit)
    //display: block
    overflow: auto;
    width: 100%
    flex-wrap nowrap
    flex-shrink: 0
    position: relative;
    left: 0px
    right: 0px

    justify-content: space-between;
    &:after
      content ' '
      min-width: 20px
      height: 10px
      background-color: transparent
      display: block

.tab-slider__header-item
  border-radius 32px
  cursor: pointer;
  transition-timing-function ease-in-out
  transition-duration .3s
  transition-property background, color
  position: relative;
  overflow: hidden
  white-space nowrap
  height: 44px


  &:last-child
    margin-right: 0
  @media (max-width: tablet-upper-limit)
    flex-shrink: 0
  @media (hover: hover)
    &:hover,
    &:focus
      color b2c-orange
.tab-slider__header-inner
  background-color: main-color005
  border-radius 24px
  padding 2px
  display: flex
  flex-wrap nowrap
  @media (max-width: tablet-upper-limit)
    margin-left: 20px
.tab-slider__header-item--active
  cursor: default;
  background-color b2c-orange
  color white
  @media (hover: hover)
    &:hover,
    &:focus
      cursor: default;
      background-color b2c-orange
      color white


.tab-slider__timer
  position: absolute;
  border-radius 32px
  width: 32px
  height: 100%
  left: -60px
  right: 0
  padding-right: 60px
  box-sizing content-box
  top: 0
  bottom: 0
  background-color: b2c-orange-button-hover

.tab-slider__header-text
  position: relative;
  z-index 2

.tab-slider__img img
    max-width 100%
    display: block

.tab-slider__img
  @media (min-width: tablet-upper-limit)
    padding-left: 50px

.tab-slider__item
  .row-td-reverse
    @media (max-width: tablet-upper-limit)
      justify-content flex-end

@keyframes ShowNextTab
  0%
    opacity: 0
  100%
    opacity 1
@keyframes HideActiveTab
  0%
    opacity: 0
  1%
    opacity: 1


  100%
    opacity 0

@keyframes HideBeforeTab
  0%
    opacity: 1

  100%
    opacity 0

@keyframes ShowActiveTab
  0%
    opacity: 0

  100%
    opacity 1

.tab-slider__item--show
  opacity: 0
  z-index 10
  position: relative;
  animation-name ShowActiveTab
  animation-duration 1s
  animation-timing-function ease-in-out

.tab-slider__content
  position: relative;
  overflow: hidden;

.tab-slider__item--show+.tab-slider__item
  opacity: 0
  position: absolute;
  z-index 2
  left: 0
  right: 0
  top: 0
  animation-name HideBeforeTab
  animation-duration 0.9s
  animation-timing-function ease-in-out
