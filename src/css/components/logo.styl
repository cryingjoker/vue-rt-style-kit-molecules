.rt-logo
  display inline-block
  &__rt-text
    max-width 100%
    margin-bottom 5.5%
    margin-left -5%

  svg + .rt-logo__rt-text
    max-width 77.31%

.rt-logo-line
  display inline-block
  width 1px
  height 115px
  padding-left horizontal-space
  padding-right horizontal-space
  position relative

  @media (max-width: tablet-upper-limit)
    height 70px
    top -10px

  @media (max-width: mobile-upper-limit)
    height 55px
    top -20px

  &:before
    content ""
    width 1px
    height 100%
    background-color #fff
    margin-left auto
    margin-right auto
    position absolute
    top 0
    bottom 0
    left 0
    right 0

.rt-logo-co-branding
  display table
  flex-direction row
  margin-left -10px
  margin-right -10px
  position relative

.rt-logo-co-branding__item
  display table-cell
  padding-left 8px
  padding-right 8px

.rt-logo-co-branding__line
  display table-cell
  width 1px
  height 100%
  margin-left 10px
  padding-top 6px
  position relative
  bottom -3px
  .{newAppName}-dark-theme &
    &:before
      background-color: #fff
  &:before
    content ""
    display block
    width 100%
    background-color #878C93
    position absolute
    top -6px
    bottom -3px
    z-index: 10

/* IE shithack*/
@media screen and (-ms-high-contrast: active), (-ms-high-contrast: none)
  .rt-logo__rt-text
    position relative
    top .7ex
    left -.7ex
    max-width 40%!important
