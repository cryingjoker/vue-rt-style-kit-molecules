.{newAppName}-message-box
  position fixed
  bottom 40px
  right 40px
  z-index 99
  max-width 240px
  border-radius 8px
  opacity 0
  transition opacity .2s ease-in-out
  pointer-events none
  @media(max-width tablet-upper-limit)
    bottom -1px
    right 0
    width 100%
    max-width 100%
    border-radius 0

  &--is-show
    opacity 1
    pointer-events all

  &--is-theme-light
    border 1px solid #F3F3F4
    box-shadow  0 0 20px rgba(0, 0, 0, 0.1)
    @media(max-width tablet-upper-limit)
      border none
      box-shadow  0 -4px 20px rgba(0, 0, 0, 0.1)

  &--is-theme-dark
    @media(max-width tablet-upper-limit)
      box-shadow 0px -4px 20px rgba(255, 255, 255, 0.1)

  &__close
    position absolute
    top 0
    right 4px
    width 37px
    height 37px
    cursor pointer
    z-index 1

  &__corner
    position absolute
    bottom 0
    right 0
    max-height 100%
    width auto
    @media(min-width tablet-upper-limit)
      border-radius 0 0 8px 0
    @media(max-width mobile-upper-limit)
      display none
