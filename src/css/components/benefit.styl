.{newAppName}-benefit
  &-block
    width 100%
    padding-top 40px
    &--no-transparency
      .{newAppName}-benefit-item__text
        p
          opacity 1
    &--nested
      padding-top 0
      .{newAppName}-benefit-item
        margin-top 40px
        margin-bottom 0
        .{newAppName}-font-small-paragraph
          opacity 1
  &-item
    margin-bottom 60px
    &__step,
    &__icon
      margin-bottom 20px
      &-background
        border-radius 50%
        position relative
        margin-bottom 20px
        //.{newAppName}-benefit-item__icon
        //  position absolute
        //  top 50%
        //  left 50%
        //  transform translateY(-50%) translateX(-50%)
      .rt-icon
        height 100%
      img
        max-width 100%
        max-height 100%
    &__image
      margin-bottom: 20px
      &>img
        width 100%
    &__text
      .{newAppName}-font-small-paragraph
        opacity .7
    &--center
      text-align: center
      .{newAppName}-benefit-item__icon
        margin 0 auto 20px
    &--inline
      display flex
      .{newAppName}-benefit-item__icon
        flex-basis 80px
        margin-bottom: 0
      .{newAppName}-benefit-item__text
        margin-left: 20px
    @media (max-width tablet-upper-limit)
      margin-bottom 40px
    &__icon
      display flex
      align-items center
      justify-content center
      svg
        size(100%)
  &-item__text
    &-icon
      width 24px
      height 24px
      display: inline-block
      margin-right: 10px
      &-svg
        width 100%
        height 100%

.rbi-pr70
  @media(min-width: tablet-lower-limit)
    padding-right 30px
  @media(min-width: laptop-lower-limit)
    padding-right 70px

.rbi-pr1c
  @media(min-width: laptop-lower-limit)
    padding-right calc(50% * 1 / 6 + 10px)
