cmp = '.rt-microtabs'
microtabsTriangleRealSize = 12
microtabsTriangleSize = (microtabsTriangleRealSize * 0.7075)px
microtabsDefBg = #eeeff0
microtabsDefBgHover = #e7e8e9
microtabsPurpleBg = #f1e5ff
microtabsPurpleBgHover = #ebd9ff
microtabsPurpleColor = #7700ff
microtabsOrangeBg = #ffede7
microtabsOrangeBgHover = #ffe5db
microtabsOrangeColor = #ff4f12

{cmp}
  position relative
  overflow hidden

  &-nav,
  &-cnt
    display flex

  &-nav
    & > a
      cursor pointer
      font-size 12px
      line-height 24px
      display flex
      align-items center
      flex 0 0 auto
      margin-right 8px
      position relative
      user-select none
      transform scale(1)
      transition transform .123s ease-in
      z-index 2
      &.is--active
        cursor default
      &.is--hidden
        color transparent !important
        position absolute
        transform scale(0)
        transition none
        z-index 1
    &__control
      padding 0 4px
    &__item
      padding 0 8px
      &-tgl
        background inherit
        margin auto
        position absolute
        width microtabsTriangleSize
        height microtabsTriangleSize
        left 0
        right 0
        bottom -(microtabsTriangleSize / 2)
        transform rotate(45deg)
        transition transform .3s ease-in
        z-index -2
      // Background
      &-bg
        content: ''
        background inherit
        border-radius 16px
        position absolute
        width 100%
        height 100%
        left 0
        top 0
        z-index -1
      &-opacity
        background microtabsDefBg
        transition background .3s ease-in

  &-cnt
    padding-top 18px
    transition transform .3s ease-in
    &__item
      font-size 14px
      line-height 20px
      flex: 0 0 100%;
      max-width 100%
      opacity 1
      overflow hidden
      transition opacity .3s ease-in
      &.is--hidden
        transition opacity .3s ease-out
        opacity 0

  // Обработка состояний
  &.is--conveer
    {cmp}-nav__item
      cursor default
      &-tgl
        display none
  &.is--fit-content
    {cmp}-cnt__item
      max-height 60px // Органичение в 3 строки
  {cmp}-nav__item
    &.is--from
      &-right
        {cmp}-nav__item-tgl
          transform rotate(45deg) translate3d(-(microtabsTriangleRealSize)px, 0, 0)
      &-left
        {cmp}-nav__item-tgl
          transform rotate(45deg) translate3d(0, -(microtabsTriangleRealSize)px, 0)

  {cmp}-nav__item
    &.is--theme-flat
      {cmp}-nav__item-bg
        display none
    &.is--theme-purple
      color microtabsPurpleColor
      {cmp}-nav__item-opacity
        background microtabsPurpleBg
    &.is--theme-orange
      color microtabsOrangeColor
      {cmp}-nav__item-opacity
        background microtabsOrangeBg

@media (hover: hover)
  {cmp}.is--tabs
    {cmp}-nav > a:not(.is--active):hover
      {cmp}-nav__item-opacity
        background microtabsDefBgHover
      &.is--theme-purple
        {cmp}-nav__item-opacity
          background microtabsPurpleBgHover
      &.is--theme-orange
        {cmp}-nav__item-opacity
          background microtabsOrangeBgHover
