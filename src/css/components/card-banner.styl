.rt-card-banner
  padding 20px 0 0 24px
  border-radius 8px
  background-color main-color003
  display flex
  flex-direction column
  position relative
  justify-content space-between
  @media(hover: hover)
    &:hover
      background-color main-color005
  &-wrapper
    flex-basis 25%
    max-width 25%
    padding 0 10px
    margin-bottom 40px
    &--double-sized
      .rt-card-banner__image
        width 312px
        height 204px
        position absolute
        bottom 0
        right 0
      .rt-card-banner__text-content
        width 50%
  &__tag
    padding 0 12px
    background-color b2c-cool-grey
    border-radius 8px
    margin-bottom 16px
    display inline-block
  &__image
    width 244px
    height 160px
    align-self flex-end
    .rt-img-container
      width 100%
      height 100%
      display flex
      .rt-img
        object-fit cover

.rt-carousel-slide-v2
  .rt-card-banner-wrapper
    max-width 100%
    flex-basis 100%
    padding 0
