$colorStart = rgba(241, 243, 245, 255)
$colorEnd = rgba(227, 232, 236, 255)

$waveDuration = 3s
$waveSize = 750px

.rt-skeleton-banner
  overflow hidden
  position relative;

  @media (min-width tablet-lower-limit)
    height 341px
  @media (min-width laptop-lower-limit)
    height 422px

  &-mob-image
    display none
    position absolute
    top 0
    left 0
    right 0
    z-index 1
    @media (max-width mobile-upper-limit)
      display block
    &-item
      height 56vw
      width 100vw
      background-color $colorStart

  &-wrapper
    border-radius 8px
    overflow hidden;
    position relative;
    max-width 100%
    background-color: #fff
    @media all and (-ms-high-contrast: none), (-ms-high-contrast: active)
      height 100%
    @media (max-width tablet-upper-limit)
      border-radius 0;
    @media (max-width mobile-upper-limit)
      padding-top 56vw
      padding-bottom 24px
      box-sizing border-box

  &-content
    position relative;
    z-index 2
    max-width 100%
  &-inner-content
    @media (max-width mobile-upper-limit)
      min-width 100%
      min-height 100%

  &-inner
    min-width 100%
    margin-top 93px
    @media(max-width tablet-upper-limit)
      margin-top 81px
    @media(max-width mobile-upper-limit)
      margin-top 0px
  &-inner-content
    min-width 100%
  &-header
    height 16px
    width 142px
    background-color $colorStart
    margin-bottom 16px
    border-radius: 4px;
    @media(max-width tablet-upper-limit)
      margin-bottom 12px
  &-label
    height 88px
    width 100%
    background-color $colorStart
    margin-bottom 16px
    border-radius: 4px;
    @media(max-width tablet-upper-limit)
      height 64px
      margin-bottom 12px
  &-description
    height 24px
    width 100%
    background-color $colorStart
    margin-bottom 24px
    border-radius: 4px;
    @media(max-width tablet-upper-limit)
      margin-bottom 16px
    @media(max-width mobile-upper-limit)
      height 48px
      margin-bottom 24px
  &-actions
    display flex
    justify-content space-between
    &-button
      height 52px
      width 142px
      background-color $colorStart
      border-radius: 4px;
      @media(max-width tablet-upper-limit)
        height 36px
        width 115px
    
    &-arrows
      display none
      @media(max-width mobile-upper-limit)
        height 36px
        display flex
        justify-content start
        gap 12px
      &-item
        position relative
        height 100%
        width 36px
        &:before
          content ''
          display block
          width 36px
          height 36px
          position absolute
          margin auto
          left 0
          right 0
          top 0
          bottom 0
          background-color $colorStart
          border-radius 50%

  &-paginator
    margin-top 49px
    display flex
    justify-content start
    gap 24px
    @media(max-width mobile-upper-limit)
      display none
    &-item
      position relative
      &:before
        content ''
        display block
        width 10px
        height 10px
        position absolute
        margin auto
        left 0
        right 0
        top 0
        bottom 0
        background-color $colorStart
        border-radius 50%

  &-image
    padding 60px
    display flex
    justify-content flex-end
    @media(max-width tablet-upper-limit)
      padding 80px 20px
    @media(max-width mobile-upper-limit)
      padding 0px
    &-item
      height 302px
      width 530px
      background-color $colorStart
      @media(max-width tablet-upper-limit)
        height 180px
        width 307px
      @media(max-width mobile-upper-limit)
        height 100%
        width 100%
  
  &__wave
    overflow hidden
    position relative

    &:after
      content ''
      animation wave $waveDuration ease-in-out infinite
      background $colorEnd
      border-radius 50%
      position absolute
      width $waveSize
      height $waveSize
      top - $waveSize
      left - $waveSize

@keyframes wave
  0%
    transform translate( 0, 0 )
  100%
    transform translate( $waveSize * 3, $waveSize * 2 )