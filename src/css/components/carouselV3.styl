.rt-carousel-v3
  position relative

.rt-carousel-v3--scroll
  display: flex
  flex-wrap nowrap
  padding: 0
  transition-timing-function ease-in-out
  transition-duration 0.5s
  transition-property  margin-left
  margin-left: 0px
  margin-right: 0px
  @media(max-width tablet-upper-limit)
    max-width initial
    flex 1
    flex-wrap nowrap
    width: calc(((100vw - 20px) / 6 * 5 - 7px) / 2 * 3)
  @media(max-width mobile-upper-limit)
    width: calc(80vw * 3 )

  &.rt-carousel-v3--scroll--remove-transform
    transition-property  transform, margin-left
  &>.row
    margin-left: -10px
    margin-right: 10px

    @media(max-width tablet-upper-limit)
      width: auto
      flex-wrap nowrap
      margin-left: 0
      margin-right: 0
      //min-width fit-content
    &>.rt-col-td-3
      @media(max-width tablet-upper-limit)
        width: calc(((100vw - 20px) / 6 * 5 - 7px) / 2)
        max-width: calc(((100vw - 20px) / 6 * 5 - 7px) / 2)
        padding-right: 0
        padding-left: 20px
      @media(max-width mobile-upper-limit)
        width: calc(80vw + 10px)
        max-width: 80vw

.rt-carousel-v3-wrap
  overflow: hidden;
  margin-right: 10px
  margin-left: 10px
  @media(max-width tablet-upper-limit)
    margin-left: 0
    margin-right: 0

.rt-carousel-v3-arrows
  position: absolute;
  top: 0
  bottom: 0
  left: 0
  right: 0
  pointer-events none
  display: flex
  align-items center
  justify-content space-between
  padding-left: 55px
  padding-right: 55px
  z-index 15
  @media(max-width tablet-upper-limit)
    display: none
.rt-carousel-v3-arrow
  width: 52px
  height: 52px
  border-radius 50%
  background-color: b2c-white
  box-shadow 0px 0px 8px rgba(0, 0, 0, 0.25);
  display: flex
  align-items center
  justify-content center
  pointer-events auto
  cursor: pointer
  transition-timing-function ease-in-out
  transition-duration 0.2s
  transition-property  box-shadow

  @media (hover:hover)
    &:hover
      box-shadow 0px 0px 8px rgba(0, 0, 0, 0.5);
.rt-carousel-v3-arrow-left
  padding-right: 3px
.rt-carousel-v3-arrow-right
  padding-left: 3px
.rt-carousel-v3-shadows-wrapper
  position: absolute;
  left: 0
  right: 0
  pointer-events none
  top: 0
  bottom: 0
  z-index 10
  display: flex


.rt-carousel-v3-shadows
  margin-left: 10px
  margin-right: 10px
  position: relative;
  flex 1
  overflow: hidden;
  @media(max-width tablet-upper-limit)
    display: none
  .rt-shadow
    position: absolute;
    top: 0
    bottom: 0
    width: 40px
    transition-timing-function ease-in-out
    transition-duration 0.5s
    transition-property  margin

  .rt-shadow-left
    left: 0px
    margin-left: -40px
  .rt-shadow-right
    right: 0px
    margin-right: -40px
.rt-carousel-slide-v3
  transition-timing-function ease-in-out
  transition-duration 0.5s
  transition-property  opacity
.rt-carousel-slide-v3--not-act
  opacity: 0.3
.rt-carousel-slide-v3--td-not-act
  @media(max-width tablet-upper-limit)
    opacity: 0.3
.rt-carousel-slide-item-3
  padding-left: 10px
  padding-right: 10px
  @media (min-width 1600px)
    width 1440px*0.3
    min-width 1440px*0.3
  @media (max-width 1599px)
    width: calc((100vw - 160px)*0.3)
    min-width: calc((100vw - 160px)*0.3)
  @media (max-width 1024px)
    width: calc((100vw - 40px)*0.4)
    min-width: calc((100vw - 40px)*0.4)
  @media (max-width 360px)
    width: calc((100vw - 40px)*0.75)
    min-width: calc((100vw - 40px)*0.4)
  @media (max-width 320px)
    width: 235px
    min-width: 235px
.rt-carousel-slide-item-4
  padding-left: 10px
  padding-right: 10px
  @media (min-width 1600px)
    width 1440px*0.23
    min-width 1440px*0.23
  @media (max-width 1599px)
    width: calc((100vw - 160px)*0.23)
    min-width: calc((100vw - 160px)*0.23)
  @media (max-width 1024px)
    width: calc(40vw - 16px)
    min-width: calc(40vw - 16px)
  @media (max-width 360px)
    width: calc((100vw - 40px)*0.75)
    min-width: calc((100vw - 40px)*0.4)
  @media (max-width 320px)
    width: 235px
    min-width: 235px
