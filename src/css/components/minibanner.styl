.rt-minibanner
  border-radius 8px
  overflow: hidden;
  .rt-shadow
    height: 100%
    width: 100%
    position: absolute
    top: 0
  .rt-shadow-left
    position: absolute;
    width: 142px
    height: 100%
    left: 0
  .rt-shadow-right
    position: absolute;
    width: 142px
    height: 100%
    right: 0
.rt-minibanner-content-wrap
  min-height 200px
  display: flex
  align-items center
  @media (max-width tablet-upper-limit)
    min-height inherit
.rt-minibanner-image
  position: absolute;
  left: 10px
  top: 0
  bottom: 0
  height: 100%
  right: 10px
  img,
  .rt-img-container
    max-height 100%
    object-fit cover
    object-position center
    position: absolute
    width: 100%
    height: 100%


.rt-minibanner-image--block
  img,
  .rt-img-container
    border-radius 8px
    object-fit cover
    object-position center
  @media (max-width tablet-upper-limit)
    .rt-shadow
      display: none
    //height: 52vw
    height: 350px+40px
    width: 100%
    position: relative

    img,
    .rt-img-container
      position: relative;
.rt-minibanner-image
  @media (max-width mobile-upper-limit)
    height: 170px + 32px
    position: relative
    left: 0
    right: 0
    img,
    .rt-img-container
      border-radius 8px
      position relative

.rt-minibanner-image--fix
  @media (min-width laptop-lower-limit)
    height: 100%
    .rt-img-container
      bottom: 24px
      top: 24px
      position absolute
      object-fit cover
      height: calc(100% - 48px)
      width: 100%
      max-width 100%
      max-height 100%
      margin auto
      border-radius 8px
      overflow hidden


.rt-minibanner-icon svg
  max-height 40px
  @media (max-width tablet-upper-limit)
    max-height 32px
