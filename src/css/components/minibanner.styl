.rt-minibanner
  border-radius 8px
  overflow: hidden;
  .rt-shadow
    height: 100%
    width: 100%
    position: absolute
    top: 0
  .rt-shadow-left
    position: absolute;
    width: 142px
    height: 100%
    left: 0
  .rt-shadow-right
    position: absolute;
    width: 142px
    height: 100%
    right: 0
.rt-minibanner-content-wrap
  min-height 200px
  display: flex
  align-items center
.rt-minibanner-image
  position: absolute;
  left: 0
  top: 0
  bottom: 0
  height: 100%
  right: 0
  img,
  .rt-img-container
    max-height 100%
    object-fit cover
    object-position center
    position: absolute
    width: 100%
    height: 100%
  @media (max-width mobile-upper-limit)
    height: 52vw
    position: relative
    img,
    .rt-img-container
      border-radius 8px
      position relative

.rt-minibanner-image--block
  img,
  .rt-img-container
    border-radius 8px
  @media (max-width tablet-upper-limit)
    height: 52vw
    position: relative
    img,
    .rt-img-container
      position: relative;
.rt-minibanner-image--fix
  height: 100%
  .rt-img-container
    bottom: 24px
    top: 24px
    position absolute
    object-fit cover
    height: calc(100% - 48px)
    width: calc(100% - 20px)
    max-width 100%
    max-height 100%
    margin auto
    border-radius 8px
    overflow hidden
    left: 10px
    right: 10px
    @media (max-width tablet-upper-limit)
      height: 100%
      top: 0
      bottom: 0

.rt-minibanner-image--fix-td
  @media (max-width tablet-upper-limit)
    img,
    .rt-img-container
      position: relative
