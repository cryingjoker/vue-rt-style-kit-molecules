.rt-video-banner
  height: 520px
  position: relative;
  @media (max-width: mobile-upper-limit)
    height auto

.rt-video-banner__tag
  position: absolute;
  top: 0
  bottom: 0
  left: 0
  right: 0
  width: 100%
  height: 100%
  object-fit cover
  object-position center
  display: block
  @media (max-width: mobile-upper-limit)
    position: relative;
    height: 204px
    &.md-d-none
      display: none

.rt-video-banner__filter
  position: absolute;
  z-index: 1;
  opacity: 0.25
  top: 0
  bottom: 0
  left: 0
  right: 0

.rt-video-banner__content
  display: flex
  height: 100%
  align-items center
  z-index 10
  position: relative
  max-width 100%
  @media (max-width: mobile-upper-limit)
    display: block
.rt-video-banner__play-wrapper
  position: absolute;
  height: 100%
  z-index 20
  pointer-events none
  left: 0
  right: 0
  top: 0

.rt-video-banner__play
  position: absolute;
  top: 0
  bottom: 0
  left: 0
  right: 0
  height: 132px
  width: 132px
  margin auto
  pointer-events auto
  display: flex
  justify-content center
  align-items center
  cursor: pointer
  &:after
    content ''
    width: 80px
    height: 80px
    position: absolute;
    top: 0
    bottom: 0
    left: 0
    right: 0
    margin auto
    border 1px solid b2c-white05
    border-radius 50%
  &:before
    content ''
    position: absolute;
    top: 0
    bottom: 0
    left: 0
    right: 0
    border-radius 50%
    border 1px solid b2c-white01

.rt-video-banner__play-svg
  margin-left: 5px
.rt-video-banner__wrapper
  @media (max-width: mobile-upper-limit)
    position: relative;
.rt-video-banner__popup-video
  max-width 100%
