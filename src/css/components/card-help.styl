.rt-card-help
  padding 40px 20px 0 40px
  border-radius 8px
  display flex
  position relative
  @media (max-width mobile-upper-limit)
    padding 24px 16px 0 20px
  @media(hover: hover)
    &:hover
      .rt-card-help__link-text
        width 64px
        color b2c-orange
        margin-right 8px
      .rt-sys-icon
        fill b2c-orange
  &__image
    width 110px
    height 124px
    @media (max-width tablet-upper-limit)
      width 76px
      height 88px
    @media (max-width mobile-upper-limit)
      width 88px
      height 100px
      margin-left 38px
    .rt-img-container
      height 100%
      display flex
    .rt-img
      object-fit cover
      max-width 100%
      max-height 100%
  &__content-wrapper
    display flex
    align-items flex-end
    flex-direction row
    justify-content space-between
    flex-grow 2
    @media (max-width tablet-upper-limit)
      align-items flex-start
    @media (max-width mobile-upper-limit)
      align-items flex-end
  &--dual
    padding 40px
    @media (max-width tablet-upper-limit)
      padding-bottom 32px
    @media (max-width mobile-upper-limit)
      padding 24px 16px 24px 20px
    .rt-card-help__image
      width 230px
      height 144px
      @media (max-width mobile-upper-limit)
        width 118px
        height 72px
        margin-left 0
    .rt-card-help__content
      height 100%
      display flex
      flex-direction column
      justify-content space-between
  &__link-text
    width 0
    transition width .2s linear, margin-right .3s linear
    word-break normal
    overflow hidden
    margin-right 0
  &__inner
    height 100%
    display flex
    justify-content space-between
    flex-direction column
    @media (max-width mobile-upper-limit)
      flex-direction row
      width 100%
  &__link
    flex-grow 0
    position absolute
    bottom 40px
    left 40px
    @media (max-width tablet-upper-limit)
      bottom 32px
    @media (max-width mobile-upper-limit)
      left 20px
      bottom 24px
  &__bottom
    display flex
    justify-content flex-end
    @media (max-width mobile-upper-limit)
      align-items flex-end
